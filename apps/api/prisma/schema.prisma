generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  prefs     Json?
  favorites Favorite[]
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  recipeId  String
  data      Json // snapshot of recipe metadata
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
